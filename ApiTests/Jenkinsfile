pipeline {
	agent any
	tools {
        jdk 'JDK_11'
    }


	stages {
	    stage ('Build') {
                steps {
                    sh '''
                    mvn clean compile
                    '''
                }
            }
		stage ('Api Tests') {
            steps {
                sh '''
                mvn test
                '''
            }
        }
	}

	post {
        always {
            script {
            	sh '''
                    echo 'execute post build'
                    cp ApiTests/src/test/resources/environment.properties ApiTests/target/allure-results/
                    '''
            }
            cleanWs()
        }
    }
}
